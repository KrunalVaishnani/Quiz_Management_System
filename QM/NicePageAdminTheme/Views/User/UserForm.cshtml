@model UserModel;

<div class="container mt-4">
    <div class="card">
    <div class="card-header m-3">
    <div class="row">
        <div class="col-12">
            @if (Model.UserID > 0)
            {
                <h3>Update User</h3>
            }
            else
            {
                <h3>Add User</h3>
            }
        </div>
        </div>
    </div>
        <div class="card-body m-3">

    <form asp-controller="User" asp-action="Save" method="post">
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
        }

        <input type="hidden" asp-for="UserID" />

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">User name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="UserName" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="cal" class="form-control" asp-for="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">MobileNo</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="MobileNo" required />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>


        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">IsActive</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="IsActive" required />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">IsAdmin</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="IsAdmin" required />
                <span asp-validation-for="IsAdmin" class="text-danger"></span>
            </div>
        </div>

        
        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary me-2">Save</button>
                <a asp-action="UserList" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

