@model NicePageAdminTheme.Models.QuestionModel

    <div class="card">
    <div class="card-header m-3">
        <div class="row">
        <div class="col-12">

            <h3>Question Detail Form</h3>
            </div>
            </div>
            </div>
    <div class="card-body">
            <!-- General Form Elements -->
            <form asp-controller="Question" asp-action="onSubmit" method="post">
                <div class="row mb-3">
                    <div class="col-sm-10">
                        <input type="hidden" class="form-control" asp-for="QuestionID">
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="QuestionText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Question</label>
                    <div class="col-sm-10">
                        <textarea asp-for="QuestionText" class="form-control"></textarea>
                        <span asp-validation-for="QuestionText" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="QuestionLevelID" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Question Level</label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="QuestionLevelID" asp-items="@(new SelectList(ViewBag.LevelList, "QuestionLevelID", "QuestionLevel"))">
                            <option value="">Select Level</option>
                        </select>
                        <span asp-validation-for="QuestionLevelID" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="OptionA" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Option A</label>
                    <div class="col-sm-10">
                        <input asp-for="OptionA" type="text" class="form-control">
                        <span asp-validation-for="OptionA" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="OptionB" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Option B</label>
                    <div class="col-sm-10">
                        <input asp-for="OptionB" type="text" class="form-control">
                        <span asp-validation-for="OptionB" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="OptionC" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Option C</label>
                    <div class="col-sm-10">
                        <input asp-for="OptionC" type="text" class="form-control">
                        <span asp-validation-for="OptionC" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="OptionD" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Option D</label>
                    <div class="col-sm-10">
                        <input asp-for="OptionD" type="text" class="form-control">
                        <span asp-validation-for="OptionD" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="CorrectOption" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Correct Option</label>
                    <div class="col-sm-10">
                        <select asp-for="CorrectOption" class="form-control">
                            <option value="">Select Correct Option</option>
                            <option value="A">Option A</option>
                            <option value="B">Option B</option>
                            <option value="C">Option C</option>
                            <option value="D">Option D</option>
                        </select>
                        <span asp-validation-for="CorrectOption" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="QuestionMarks" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Marks</label>
                    <div class="col-sm-10">
                        <input asp-for="QuestionMarks" type="number" class="form-control">
                        <span asp-validation-for="QuestionMarks" class="text-danger"></span>
                    </div>
                </div>

                <div class="row m-5 mb-3 text-center">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="QuestionList" class="btn btn-secondary">Back</a>

                    </div>
                </div>
            </form><!-- End General Form Elements -->
        </div>
    </div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
