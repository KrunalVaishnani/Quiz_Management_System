@model QuizModel;

<div class="container mt-4">
    <div class="card">
        <div class="card-header m-3">
            <div class="row">
                <div class="col-12">
                    @if (Model.QuizID > 0)
                    {
                        <h3>Update Quiz</h3>
                    }
                    else
                    {
                        <h3>Add Quiz</h3>
                    }
                </div>
            </div>
        </div>
        <div class="card-body m-3">
            <form asp-controller="Quiz" asp-action="Save" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                }

                <input type="hidden" asp-for="QuizID" />

                <div class="row mb-3">
                    <label for="QuestionLevel" class="col-sm-2 col-form-label">Quiz name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="QuizName" required />
                        <span asp-validation-for="QuizName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="QuestionLevel" class="col-sm-2 col-form-label">Quiz date</label>
                    <div class="col-sm-10">
                        <input type="cal" class="form-control" asp-for="QuizDate" required />
                        <span asp-validation-for="QuizDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="QuestionLevel" class="col-sm-2 col-form-label">Total questions</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="TotalQuestions" required />
                        <span asp-validation-for="TotalQuestions" class="text-danger"></span>
                    </div>
                </div>

                @* <div class="row mb-3">
                    <label for="UserID" class="col-sm-2 col-form-label">User Name</label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="UserID" asp-items="@(ViewBag.UserList != null ? new SelectList(ViewBag.UserList, "UserID", "UserName") : null)">
                            <option value="" disabled selected>Select User</option>
                        </select>
                        <span asp-validation-for="UserID" class="text-danger"></span>
                    </div>
                </div> *@

                <div class="row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary me-2">Save</button>
                        <a asp-action="QuizList" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
   
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

