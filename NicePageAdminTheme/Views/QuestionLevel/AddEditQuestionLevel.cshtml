@model QuestionLevelModel;

<div class="container mt-4">
    <div class="card">
        <div class="card-header m-3">
    <div class="row">
        <div class="col-12">
            @if (Model.QuestionLevelID > 0)
            {
                <h3>Update Question Level</h3>
            }
            else
            {
                <h3>Add Question Level</h3>
            }
        </div>
        </div>
    </div>
        <div class="card-body m-3">
    <form asp-controller="QuestionLevel" asp-action="SaveQuestionLevel" method="post">
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
        }

        <input type="hidden" asp-for="QuestionLevelID" />

        <div class="row mb-3">
            <label for="QuestionLevel" class="col-sm-2 col-form-label">Question Level</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="QuestionLevel" placeholder="Enter a question level (e.g., Easy, Medium, Hard)" required />
                <span asp-validation-for="QuestionLevel" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary me-2">Save</button>
                <a asp-action="QuestionLevelList" class="btn btn-secondary">Back</a>
            </div>
        </div>
        
    </form>
    </div>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
